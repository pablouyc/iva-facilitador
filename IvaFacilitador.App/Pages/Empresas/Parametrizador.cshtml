@page
@model IvaFacilitador.App.Pages.Empresas.ParametrizadorModel
@{
    ViewData["Title"] = "Parametrizador";
}
<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h1 class="h5 mb-3">Parametrizador de empresa</h1>

          @if (Model.NotFoundView)
          {
              <div class="alert alert-warning">No se encontró la empresa. Proporcione realmId en la URL.</div>
          }
          else
          {
              <p class="mb-4">
                <strong>@(Model.Name ?? "Empresa (sin nombre)")</strong><br />
                <small class="text-muted">RealmId: @Model.RealmId</small>
              </p>

              <form method="post">
                <input type="hidden" asp-for="RealmId" />
                <input type="hidden" asp-for="Name" />
                <div class="d-flex justify-content-center gap-2">
                  <button type="submit" class="btn btn-success" asp-page-handler="Guardar">Guardar</button>
                  <button type="submit" class="btn btn-outline-secondary" asp-page-handler="Cancelar">Cancelar</button>
                </div>
              </form>
          }
        </div>
      </div>
    </div>
  </div>
</div>
