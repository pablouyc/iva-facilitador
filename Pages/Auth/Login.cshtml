@page
@model IvaFacilitador.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Ingresar";
    Layout = null; // pantalla limpia para el login
}
<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Ingresar - Facilitador IVA</title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
<link rel="stylesheet" href="~/css/site.css"/>
<style>
:root { --verde:#02343F; }
body{ background:#fff; color:#111;}
.login-icon{ width:160px; height:160px; margin:60px auto 20px auto; display:block;}
.card-login{ max-width:480px; margin:0 auto 40px auto; border-radius:14px; box-shadow:0 8px 30px rgba(0,0,0,.06); }
.btn-black{ background:#000; color:#fff; border:0; }
.btn-black:hover{ background:#111; color:#fff; }
.logo-foot{ width:120px; opacity:.9; display:block; margin:40px auto; }
</style>
</head>
<body>
  <svg class="login-icon" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
    <circle cx="100" cy="70" r="35" stroke="#02343F" stroke-width="12" fill="none"/>
    <path d="M40 160 Q100 110 160 160" stroke="#02343F" stroke-width="12" fill="none" stroke-linecap="round"/>
  </svg>

  <div class="card card-login">
    <div class="card-body p-4">
      <form method="post" novalidate>
        @Html.AntiForgeryToken()
        <div class="mb-3">
          <label class="form-label">Usuario</label>
          <input asp-for="InputUser" class="form-control" placeholder="administrador" />
        </div>
        <div class="mb-3">
          <label class="form-label">Contraseña</label>
          <input asp-for="InputPassword" type="password" class="form-control" placeholder="********" />
        </div>
        @if(!string.IsNullOrEmpty(Model.Error))
        {
          <div class="alert alert-danger py-2">@Model.Error</div>
        }
        <button type="submit" class="btn btn-black w-100">Ingresar</button>
        <div class="mt-3">
          <a href="#" class="small text-muted text-decoration-none">Forgot password?</a>
        </div>
      </form>
    </div>
  </div>

  <img class="logo-foot" src="data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='300' height='60'><text x='0' y='45' font-size='40' fill='%2302343F'>U&amp;C GROUP</text></svg>" alt="U&C GROUP"/>
</body>
</html>
