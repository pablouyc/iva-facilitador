@* UI del header derecho: buscador (visual), campana (visual), avatar con inicial + dropdown *@
<div class="d-flex align-items-center gap-3">
  <form class="d-none d-md-flex align-items-center search-wrap" role="search" onsubmit="return false">
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="me-2" viewBox="0 0 16 16" aria-hidden="true">
      <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.868-3.834zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
    </svg>
    <input class="form-control form-control-sm border-0 bg-transparent shadow-none search-input" type="search" placeholder="Buscar" aria-label="Buscar">
  </form>

  <button class="btn icon-btn" type="button" title="Notificaciones" aria-label="Notificaciones">
    <svg xmlns="http://www.w3.org/2000/svg" width="19" height="19" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
      <path d="M8 16a2 2 0 0 0 1.985-1.75H6.015A2 2 0 0 0 8 16m6-6c0 1-.667 1-1 1H3c-.333 0-1 0-1-1 0-1 .5-1 1-3 0-2.5 1.5-4 4-4V2a1 1 0 1 1 2 0v1c2.5 0 4 1.5 4 4 0 2 .5 2 1 3"/>
    </svg>
  </button>

  <div class="dropdown">
    <button class="btn p-0 avatar-btn dropdown-toggle" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false" aria-label="Menú de usuario">
      <span class="avatar-circle">
        @((string.IsNullOrEmpty(User?.Identity?.Name) ? "U" : User.Identity.Name.Substring(0,1)).ToUpper())
      </span>
    </button>
    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
      <li><a class="dropdown-item" asp-page="/Auth/Logout">Cerrar sesión</a></li>
    </ul>
  </div>
</div>
