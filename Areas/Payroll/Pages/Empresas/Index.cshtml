@page
@model IvaFacilitador.Areas.Payroll.Pages.Empresas.IndexModel
@{
    ViewData["Title"] = "Empresas";
}
<partial name="~/Areas/Payroll/Components/_Topbar.cshtml" />
<div class="container mt-3">

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Empresas</h4>
    <a class="btn btn-primary"
       asp-area="Payroll"
       asp-page="/Empresas/Config">
      Agregar
    </a>
  </div>

  <div class="table-responsive">
    <table class="table table-sm table-striped align-middle">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Cédula</th>
          <th>QBO Id</th>
          <th>Fechas de corte</th>
          <th>CCSS</th>
          <th>Usuarios con acceso</th>
          <th class="text-end">Acciones</th>
        </tr>
      </thead>
      <tbody>
@foreach (var c in Model.Empresas)
{
    <tr>
      <td>@c.Name</td>
      <td>@c.TaxId</td>
      <td>@c.QboId</td>
      <td>
        @* Placeholders: mostrar cuando agreguemos campos reales *@
        @((c.PayPolicy ?? "—"))
      </td>
      <td>
        @* Placeholder: Automático/Manual cuando haya campo *@
        — 
      </td>
      <td>
        @* Placeholder: lista de usuarios cuando exista *@
        —
      </td>
      <td class="text-end">
        <a class="btn btn-outline-secondary btn-sm"
           asp-area="Payroll"
           asp-page="/Empresas/Config"
           asp-route-id="@c.Id">
          Editar
        </a>
      </td>
    </tr>
}
@if (!Model.Empresas.Any())
{
    <tr>
      <td colspan="7" class="text-center text-muted py-4">
        No hay empresas registradas todavía.
      </td>
    </tr>
}
      </tbody>
    </table>
  </div>
</div>
