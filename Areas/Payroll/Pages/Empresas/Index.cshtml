@page
@model IvaFacilitador.Areas.Payroll.Pages.Empresas.IndexModel
@{
    ViewData["Title"] = "Empresas";
    ViewData["PayrollSection"] = "Empresas";
}
@await Html.PartialAsync("~/Areas/Payroll/Components/_Topbar.cshtml")

<div class="container mt-3">
    <h4 class="mb-3">Empresas conectadas</h4>

    <div class="table-responsive">
        <table class="table table-sm table-striped align-middle">
            <thead>
                <tr>
                    <th style="width:90px;">ID / Cédula</th>
                    <th>Nombre</th>
                    <th style="width:220px;">QBO Realm / Id</th>
                    <th style="width:140px;">Estado</th>
                    <th style="width:190px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Empresas == null || !Model.Empresas.Any())
            {
                <tr>
                    <td colspan="5" class="text-muted">No hay empresas conectadas aún.</td>
                </tr>
            }
            else
            {
                foreach (var e in Model.Empresas)
                {
                    <tr>
                        <td>
@if (e.Status == "Listo")
{
    <a class="btn btn-sm btn-outline-secondary" href="#" title="Editar">Editar</a>
    <a class="btn btn-sm btn-outline-danger" href="#" title="Eliminar">Eliminar</a>
}
else
{
    <a class="btn btn-sm btn-primary" href="/Payroll/Parametrizador/@e.Id">Parametrizar</a>
}
</td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>

    @* Wizard/placeholder al venir con ?handler=Agregar (lo dispara el botón del Topbar) *@
    @if (TempData["Empresas_ShowWizard"] as string == "1")
    {
        <div class="alert alert-info mt-3">
            Iniciaremos el asistente de conexión a QBO Payroll aquí (pendiente de backend).
        </div>
    }
</div>


