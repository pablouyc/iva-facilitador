@page
@model IvaFacilitador.Areas.Payroll.Pages.Empresas.IndexModel
@{
    ViewData["Title"] = "Empresas (Payroll)";
}
<partial name="Components/_Topbar" />

<h2 class="mb-3">Empresas (Payroll)</h2>

<form method="post" asp-page-handler="AddAndConnect" class="row g-2 align-items-center mb-3">
    @Html.AntiForgeryToken()
    <div class="col-sm-5">
        <label class="form-label">Nombre</label>
        <input asp-for="NewName" class="form-control" placeholder="Nombre de la empresa" />
    </div>
    <div class="col-sm-5">
        <label class="form-label">RUT / TaxId</label>
        <input asp-for="NewTaxId" class="form-control" placeholder="RUT / TaxId" />
    </div>
    <div class="col-sm-2 d-grid">
        <label class="form-label">&nbsp;</label>
        <button type="submit" class="btn btn-success">Agregar y Conectar</button>
    </div>
</form>

@if (Model.Companies != null && Model.Companies.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>RUT</th>
                <th>QBO Id</th>
                <th style="width: 260px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var c in Model.Companies)
        {
            var returnTo = $"/Payroll/Empresas/Config/{c.Id}";
            var connect  = $"/Auth/ConnectQboPayroll?companyId={c.Id}&returnTo={Uri.EscapeDataString(returnTo)}";
            <tr>
                <td>@c.Name</td>
                <td>@c.TaxId</td>
                <td>@(string.IsNullOrWhiteSpace(c.QboId) ? "-" : c.QboId)</td>
                <td class="d-flex gap-2">
                    @if (string.IsNullOrWhiteSpace(c.QboId))
                    {
                        <a class="btn btn-outline-primary btn-sm" href="@connect">Conectar a QBO Payroll</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-secondary btn-sm disabled" tabindex="-1" aria-disabled="true">Conectado</a>
                    }
                    <a class="btn btn-outline-secondary btn-sm" asp-area="Payroll" asp-page="/Empresas/Config" asp-route-id="@c.Id">Config</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No hay empresas a√∫n. Agrega la primera con el formulario de arriba.
    </div>
}
