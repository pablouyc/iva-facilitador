@page
@model IvaFacilitador.Areas.Payroll.Pages.Empresas.IndexModel
@{
    ViewData["Title"] = "Empresas";
    ViewData["PayrollSection"] = "Empresas";
}
@await Html.PartialAsync("~/Areas/Payroll/Components/_Topbar.cshtml")

<div class="container mt-3">
    <h4 class="mb-3">Empresas conectadas</h4>

    <div class="table-responsive">
        <table class="table table-sm table-striped align-middle">
            <thead>
                <tr>
                    <th style="width:140px;">ID / Cédula</th>
                    <th>Nombre</th>
                    <th style="width:220px;">QBO Realm / Id</th>
                    <th style="width:140px;">Estado</th>
                    <th style="width:240px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Empresas == null || !Model.Empresas.Any())
            {
                <tr>
                    <td colspan="5" class="text-muted">No hay empresas conectadas aún.</td>
                </tr>
            }
            else
            {
                foreach (var e in Model.Empresas)
                {
                    <tr>
                        <td>@(string.IsNullOrWhiteSpace(e.Cedula) ? e.Id.ToString() : e.Cedula)</td>
                        <td>@e.Nombre</td>
                        <td>@(string.IsNullOrWhiteSpace(e.QboId) ? "-" : e.QboId)</td>
                        <td>@e.Status</td>
                        <td>
                            @if (string.Equals(e.Status, "Pendiente", StringComparison.OrdinalIgnoreCase))
                            {
                                <a class="btn btn-sm btn-primary" href="/Payroll/Parametrizador/@e.Id">Parametrizar</a>
                            }
                            else
                            {
                                <a class="btn btn-sm btn-outline-secondary" href="/Payroll/Parametrizador/@e.Id">Editar</a>
                                <a class="btn btn-sm btn-outline-danger disabled" title="Próximamente">Eliminar</a>
                            }
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
