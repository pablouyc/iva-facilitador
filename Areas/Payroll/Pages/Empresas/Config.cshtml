@page "{id?}"
@model IvaFacilitador.Areas.Payroll.Pages.Empresas.ConfigModel
@{
    ViewData["Title"] = "Configurar empresa";
}
<partial name="~/Areas/Payroll/Components/_Topbar.cshtml" />
<div class="container mt-3" style="max-width:940px">

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">@(Model.IsNew ? "Agregar empresa" : "Editar empresa")</h4>
    <div class="d-flex gap-2">

      <a class="btn btn-outline-secondary"
         asp-area="Payroll"
         asp-page="/Empresas/Index">Volver</a>

      <a class="btn btn-success"
         href="/Auth/ConnectQboPayroll?companyId=@Model.Company.Id&returnTo=/Payroll/Empresas/Index">
         Conectar QBO
      </a>
    </div>
  </div>

  <form method="post">
    <div class="card">
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Nombre</label>
            <input asp-for="Company.Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Company.Name"></span>
          </div>

          <div class="col-md-6">
            <label class="form-label">Cédula</label>
            <input asp-for="Company.TaxId" class="form-control" />
            <span class="text-danger" asp-validation-for="Company.TaxId"></span>
          </div>

          <div class="col-md-6">
            <label class="form-label">QBO Id</label>
            <input asp-for="Company.QboId" class="form-control" />
            <div class="form-text">Se completa al conectar con QBO.</div>
          </div>

          <div class="col-md-6">
            <label class="form-label">Política de pago</label>
            <input asp-for="Company.PayPolicy" class="form-control" />
            <div class="form-text">Placeholder hasta definir campos de corte/CCSS.</div>
          </div>

          <div class="col-12">
            <label class="form-label">Notas/Obligaciones</label>
            <textarea asp-for="Company.ObligationsNotes" rows="3" class="form-control"></textarea>
          </div>
        </div>
      </div>
      <div class="card-footer text-end">
        <button class="btn btn-primary" type="submit">Guardar</button>
      </div>
    </div>
  </form>
</div>
